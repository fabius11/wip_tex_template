%-----------------------------------------------------------
% author (j)
%-----------------------------------------------------------

\newenvironment{authors}{\large}{\hspace{0.5cm}}

\def\name#1#2{
\ifnum#1=1%
	#2 $^\dag$
\else%
	\ifnum#1=2%
	#2 $^\ddag$　
	\else%
		\ifnum#1=3%
		#2 $^{\dag\ddag}$　
		\else%
		#2 $^{\ddag\ddag}$
		\fi
	\fi
\fi
}

%-----------------------------------------------------------
% author (e)
%-----------------------------------------------------------

\def\ename#1#2{%
	\footnotetext[#1]{%
	\hspace{3mm}#2%
	}
}


