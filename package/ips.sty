\def\eaff#1#2{
\ifnum#1=1%
  \footnotetext{{\scriptsize #2 (\dag)}}
\else
	\ifnum#1=2%
	  \footnotetext{{\scriptsize #2 (\dag\dag)}}
	\else
		\ifnum#1=3%
		  \footnotetext{{\scriptsize #2 (\ddag)}}
		\else
		  \footnotetext{{\scriptsize #2 (\ddag\ddag)}}
		\fi
	\fi
\fi
}

