\def\aff#1#2{
\ifnum#1=1%
	\dag #2　%
\else%
	\ifnum#1=2%
	\ddag #2　%
	\else%
		\ifnum#1=3%
		\ddag #2　%
		\else%
		\ddag\ddag #2　%
		\fi
	\fi
\fi
}


